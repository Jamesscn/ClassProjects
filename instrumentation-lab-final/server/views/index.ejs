<!doctype html>
<http>
    <head>
        <link href="https://fonts.googleapis.com/css?family=Nunito:600|Titillium+Web:700&effect=3d-float" rel="stylesheet"> 
        <link rel="stylesheet" href="fontawesome/css/all.min.css">
		<link rel="stylesheet" href="tailwind.css">
        <script src="/socket.io/socket.io.js"></script>
		<script src="/vue/vue.js"></script>
		<script src="/chart/Chart.js"></script>
        <title>Dashboard | Bracknell Vision</title>
    </head>
    <body class="bg-blue-900 text-blue-100">
        <div class="flex flex-col lg:flex-row">
        <div class="bg-blue-800 lg:w-1/5 lg:h-screen">
            <h2 class="bg-blue-900 text-center p-16 mb-2 font-bold text-2xl font-effect-3d-float" id="dashtitle" style="padding-bottom: 60px;">Dashboard</h2>
            <div class="p-4 hover:bg-blue-600 hover:shadow-lg border-r-4 items-center flex" id="cameraBtn">
                <i class="fas fa-video m-2"></i>
                <p>Camera</p>
            </div>
            <div class="p-4 hover:bg-blue-600 hover:shadow-lg items-center flex" id="dataBtn">
                <i class="fas fa-th-list m-2"></i>
                <p>Data</p>
            </div>
        </div>
        <div class="lg:w-4/5 h-screen" id="dashboard">
            <transition name="fade">
            <div class="bg-gray-500 m-16 rounded-lg shadow-lg flex flex-col justify-center" v-if="page == 0">
                <h2 class="bg-gray-900 text-center p-4 font-bold text-2xl rounded-t-lg font-effect-3d-float">Camera</h2>
                <p class="bg-gray-800 text-center p-2 mb-8">People detected: {{ people }}</p>
                <div class="flex content-center">
                    <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold p-4 rounded-r-lg" v-on:mousedown="left" v-on:mouseup="stop" style="height: 70px;"><i class="fas fa-arrow-left m-2"></i></button>
                    <img class="shadow-lg bg-black mb-8" :src="image" style="width: 640px; height: 320px; margin-left: auto; margin-right: auto;"></img>
                    <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold p-4 rounded-l-lg" v-on:mousedown="right" v-on:mouseup="stop" style="height: 70px;"><i class="fas fa-arrow-right m-2"></i></button>
                </div>
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-b-lg" v-on:click="screenshot">Take screenshot</button>
			</div>
			<div class="bg-gray-500 m-16 rounded-lg shadow-lg flex flex-col justify-center" v-if="page == 1">
				<h2 class="bg-gray-900 text-center p-4 font-bold text-2xl rounded-t-lg font-effect-3d-float">Data</h2>
				<p class="bg-gray-800 text-center p-2 mb-8">People detected: {{ people }}</p>
				<canvas class="p-4" id="myGraph"></canvas>
				<a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-b-lg text-center" href="data.csv" download>
					Download data
				</a>
			</div>
            </transition>
        </div>
        </div>
        <script src="index.js"></script>
    </body>
</http>